@page
@model MatchManagementApp.UI.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/register.css" />
}

<div class="container mt-5 mx-auto" style="max-width: 500px;">
    <h2 class="text-center mb-4">Create a New Account</h2>

    <form method="post" novalidate>
        <div class="mb-3">
            <label asp-for="UserRegistration.Username" class="form-label">Username</label>
            <input asp-for="UserRegistration.Username" class="form-control" />
            <span asp-validation-for="UserRegistration.Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserRegistration.Email" class="form-label">Email</label>
            <input asp-for="UserRegistration.Email" class="form-control" />
            <span asp-validation-for="UserRegistration.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserRegistration.Password" class="form-label">Password</label>
            <input asp-for="UserRegistration.Password" type="password" class="form-control" />
            <span asp-validation-for="UserRegistration.Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserRegistration.ConfirmPassword" class="form-label">Confirm Password</label>
            <input asp-for="UserRegistration.ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="UserRegistration.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserRegistration.Age" class="form-label">Age</label>
            <input asp-for="UserRegistration.Age" type="number" class="form-control" />
            <span asp-validation-for="UserRegistration.Age" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserRegistration.Gender" class="form-label">Gender</label>
            <select asp-for="UserRegistration.Gender" class="form-select">
                <option value="">-- Select Gender --</option>
                <option>Male</option>
                <option>Female</option>
            </select>
            <span asp-validation-for="UserRegistration.Gender" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-success btn-lg">Register</button>
        </div>

        <div class="text-center mt-3">
            <a asp-page="/Account/Login">Already have an account? Login here</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
