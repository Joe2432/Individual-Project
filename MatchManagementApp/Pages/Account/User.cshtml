@page
@model MatchManagementApp.UI.Pages.Account.UserModel
@{
    ViewData["Title"] = "User Profile";
}

<h2>User Profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="/images/default-user.png" alt="Profile Image" class="img-thumbnail" width="200" height="200" />
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.Profile.Username</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Profile.Email</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Profile.Age</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Profile.Gender</dd>
        </dl>

        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="btn btn-warning">Logout</button>
        </form>

        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete your account?');">
            <button type="submit" class="btn btn-danger">Delete Account</button>
        </form>

    </div>
</div>
