@page
@model MatchManagementApp.UI.Pages.MatchHistoryModel
@{
    ViewData["Title"] = "Match History";
}

<h2>Match History</h2>

@if (Model.MatchSummaries.Count == 0)
{
    <p>You haven't played any matches yet.</p>
}
else
{
    @foreach (var summary in Model.MatchSummaries)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Match vs @summary.Match.FirstOpponentName</h5>
                <p class="card-text">Score: @summary.ScoreSummary</p>

                @if (!summary.MatchOver)
                {
                    <a asp-page="/PlayMatch" asp-route-id="@summary.Match.Id" class="btn btn-warning">Continue Match</a>
                }
                else
                {
                    <span class="badge bg-success">Completed</span>
                }
            </div>
        </div>
    }
}
