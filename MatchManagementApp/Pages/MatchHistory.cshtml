@page
@model MatchManagementApp.UI.Pages.MatchHistoryModel
@{
    ViewData["Title"] = "Match History";
}

<h2>Match History</h2>

@if (Model.MatchSummaries.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Opponent</th>
                <th>Surface</th>
                <th>Score</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (match, scoreSummary, matchOver) in Model.MatchSummaries)
            {
                <tr>
                    <td>@match.FirstOpponentName</td>
                    <td>@match.Surface</td>
                    <td>@scoreSummary</td>
                    <td>@(matchOver ? "Completed" : "In Progress")</td>
                    <td>
                        @if (!matchOver)
                        {
                            <a class="btn btn-primary btn-sm" asp-page="/PlayMatch" asp-route-id="@match.Id">Continue</a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No matches found.</p>
}
